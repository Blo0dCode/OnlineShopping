@model IEnumerable<OnlineShopping.Domain.Entity.Product>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@foreach (var product in Model)
{
    <p>ИД: @product.Id</p>
    <p>Название продукта: @product.Name</p>
    <p>Описание продукта: @product.Description</p>
    <p>Цена продукта: @product.Price</p>
    <p>ИД категории продукта: @product.Category.Id</p>
    <p>Название категории продукта: @product.Category.Name</p>
    <p>Аватар: <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(@product.Avatar))"/></p>
    <hr>
}